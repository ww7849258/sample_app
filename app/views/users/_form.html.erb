<%= form_for(@user)do |f| %>
  <%= render 'shared/error_messages' %>
  <%= f.label '用户名' %>
  <%= f.text_field :name %>

  <%= f.label '邮箱' %>
  <%= f.email_field :email %>

  <%= f.label '密码' %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, '密码确认' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>

